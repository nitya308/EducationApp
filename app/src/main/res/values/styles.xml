<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/dark_grey</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/dark_purple</item>
    </style>

    <style name="MyWindows">
        <item name="android:background">@color/light_green</item>
    </style>

    <style name="YTWindows">
        <item name="android:background">@color/green</item>
    </style>

    <style name="buttons">
        <item name="android:background">@color/green</item>
    </style>

    <style name="drawer">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/dark_grey</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/light_green</item>

    </style>

</resources>
